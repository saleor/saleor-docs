{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.debug": true,
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.runtime": "node",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown",
    "mdx"
  ],
  "grammarly.selectors": [
    {
      "language": "mdx",
      "scheme": "file"
    },
    {
      "language": "plaintext",
      "scheme": "file"
    }
  ],
  "editor.formatOnSave": true
}
