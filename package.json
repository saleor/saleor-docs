{
  "description": "Saleor e-commerce documentation.",
  "repository": {
    "type": "git",
    "url": "https://github.com/saleor/saleor-docs.git"
  },
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=16 <17",
    "npm": ">=8 <9"
  },
  "scripts": {
    "start": "docusaurus start",
    "build": "NODE_OPTIONS=--max_old_space_size=4072 docusaurus build",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "publish-gh-pages": "docusaurus deploy",
    "version": "docusaurus version",
    "rename-version": "docusaurus rename-version",
    "update-api-reference": "docusaurus graphql-to-doc --force --pretty && npx tsx scripts/highlight.ts && npx tsx scripts/inject-examples.ts",
    "prepare": "husky install",
    "swizzle": "docusaurus swizzle",
    "inject-examples": "npx tsx ./scripts/inject-examples.ts"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "*.mdx"
        ],
        "extends": "plugin:mdx/recommended"
      }
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "import",
      "prettier",
      "react"
    ],
    "settings": {
      "mdx/code-blocks": true
    }
  },
  "devDependencies": {
    "@docusaurus/core": "^2.4.0",
    "@docusaurus/plugin-client-redirects": "^2.4.0",
    "@docusaurus/preset-classic": "^2.4.0",
    "@docusaurus/theme-classic": "^2.4.0",
    "@docusaurus/theme-mermaid": "^2.4.0",
    "@docusaurus/types": "^2.4.0",
    "@graphql-markdown/diff": "^1.0.7",
    "@graphql-markdown/docusaurus": "^1.17.0",
    "@graphql-tools/graphql-file-loader": "^7.5.16",
    "@types/react": "^17.0.41",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.15",
    "esbuild-loader": "^3.0.1",
    "eslint": "^8.37.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "fast-glob": "^3.2.12",
    "graphql": "^16.6.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "uuid": "^9.0.0"
  },
  "dependencies": {
    "@giscus/react": "^2.2.8",
    "@sentry/react": "^7.46.0",
    "@sentry/tracing": "^7.46.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
